<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="src/BabDev/Tests/bootstrap.php" colors="true">
	<php>
		<const name="BDTEST_HTTP_STUB" value="http://virtualhost.local/src/BabDev/Tests/Http/stubs/http_stub.php" />
	</php>

	<testsuites>
		<testsuite name="Unit">
			<directory>src/BabDev/Tests</directory>
		</testsuite>
	</testsuites>

	<logging>
		<log type="coverage-text" target="php://stdout" lowUpperBound="35" highLowerBound="70" />
	</logging>
	<filter>
		<whitelist addUncoveredFilesFromWhitelist="true">
			<directory suffix=".php">src/BabDev</directory>
			<exclude>
				<directory suffix=".php">src/BabDev/Tests</directory>
			</exclude>
		</whitelist>
	</filter>
</phpunit>
