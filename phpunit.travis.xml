<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="tests/bootstrap.php" colors="true">
	<php>
		<const name="BDTEST_HTTP_STUB" value="http://virtualhost.local/tests/unit/http/stubs/http_stub.php" />
	</php>

	<testsuites>
		<testsuite name="Unit">
			<directory>tests/unit</directory>
		</testsuite>
	</testsuites>

	<logging>
		<log type="coverage-text" target="php://stdout" lowUpperBound="35" highLowerBound="70" />
	</logging>
	<filter>
		<whitelist addUncoveredFilesFromWhitelist="true">
			<directory suffix=".php">libraries/babdev</directory>
		</whitelist>
	</filter>
</phpunit>
